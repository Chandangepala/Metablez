<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="@dimen/_5sdp"
    card_view:cardElevation="@dimen/_3sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_8sdp">

        <RelativeLayout
            android:id="@+id/rLayoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtName"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Beneficiary Name "
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtName"
                android:fontFamily="@font/roboto"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rLayoutBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayoutName">

            <TextView
                android:id="@+id/txtBank"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Bank name"
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txtBankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtBank"
                android:fontFamily="@font/roboto"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rLayBankAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayoutBank">

            <TextView
                android:id="@+id/txtAccount"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Bank Account "
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txtBankAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/txtAccount"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rLayoutIFSC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rLayBankAccount">

            <TextView
                android:id="@+id/txtIFSC"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/roboto"
                android:text="IFSC Code "
                android:textColor="@color/colorTextDark"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/txtIFSCCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivDelete"
                android:layout_toRightOf="@+id/txtIFSC"
                android:fontFamily="@font/roboto"
                android:paddingLeft="@dimen/_5sdp"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_delete" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnTransfer"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_below="@+id/rLayoutIFSC"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/button_solid_blue"
            android:fontFamily="@font/roboto"
            android:text="Transfer"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_10sdp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
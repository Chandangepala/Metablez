<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        tools:context=".ui.allfragment.ElectricityFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvStateName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:gravity="left|center"
                android:text="Select State"
                android:textColor="@color/colorTextLight"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/rLayoutState"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edit_text_outline"
                android:orientation="horizontal">

                <!-- rLayoutOperator -->

                <TextView
                    android:id="@+id/txtState"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/ivDownArrow"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="Select State"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/ivDownArrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_down" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rLayBillerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBiller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left|center"
                    android:text="Biller Name"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <RelativeLayout
                    android:id="@+id/rLayoutBillerName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/tvBiller"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_text_outline"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvBillerName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@+id/ivDownArrowBiller"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="left|center"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Select Provider"
                        android:textColor="@color/colorTextLight"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/ivDownArrowBiller"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_arrow_down" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayout1"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left|center"
                    android:text=""
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/edt1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/tvName1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_text_outline"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorTextDark"
                    android:textColorHint="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayout2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left|center"
                    android:text=""
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/edt2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/tvName2"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_text_outline"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorTextDark"
                    android:textColorHint="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayout3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:gravity="left|center"
                    android:text=""
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    android:id="@+id/edt3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_below="@+id/tvName3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/edit_text_outline"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:maxLength="50"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorTextDark"
                    android:textColorHint="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnGetBill"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_solid_blue"
                android:fontFamily="@font/roboto"
                android:text="View Unpaid Bill"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
    </RelativeLayout>
</layout>

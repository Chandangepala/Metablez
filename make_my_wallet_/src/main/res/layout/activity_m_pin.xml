<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MPinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:scaleType="fitXY"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/tvMPinTittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="Enter mPin"
            android:textColor="@color/colorYellow"
            android:textSize="@dimen/_20sdp" />

        <TextView
            android:visibility="visible"
            android:id="@+id/tvErrorMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:text=""
            android:textColor="@color/colorRed"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/edtMPin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit_text_outline"
            android:fontFamily="@font/roboto_light"
            android:gravity="left|center"
            android:hint="@string/please_enter_mpin"
            android:inputType="number"
            android:maxLength="4"
            android:paddingLeft="@dimen/_10sdp"
            android:textColor="@color/colorTextDark"
            android:textColorHint="@color/colorTextLight"
            android:textSize="@dimen/_12sdp" />


        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_solid_blue"
            android:fontFamily="@font/roboto"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>
</RelativeLayout>
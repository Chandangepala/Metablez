<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        tools:context=".ui.allfragment.PrepaidRechargeFragment" android:tag="layout/fragment_prepaid_recharge_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioPrepaid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Prepaid"
                        android:textColor="@color/colorTextDark"
                        android:textSize="@dimen/_12sdp" />

                    <RadioButton
                        android:id="@+id/radioPostpaid"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:checked="false"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Postpaid"
                        android:textColor="@color/colorTextDark"
                        android:textSize="@dimen/_12sdp" />

                </RadioGroup>
            </LinearLayout>

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtMobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_toLeftOf="@+id/ivContactAccount"
                    android:background="@drawable/edit_text_outline"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:hint="@string/enter_mobile_number"
                    android:inputType="number"
                    android:maxLength="12"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textColor="@color/colorTextDark"
                    android:textColorHint="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/ivContactAccount"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/ic_account" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayoutOperator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_outline"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivOperatorImg"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/colorBorder"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/tvOperator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ivOperatorImg"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/ivDownArrow"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="@string/please_select_operator"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/ivDownArrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_down" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rLayoutCircle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_outline"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvCircle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/ivCircleArrow"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_10sdp"
                    android:text="@string/please_select_circle"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/ivCircleArrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_down" />
            </RelativeLayout>

            <EditText
                android:id="@+id/edtRechargeAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_outline"
                android:fontFamily="@font/roboto_light"
                android:gravity="left|center"
                android:hint="@string/enter_recharge_amount"
                android:inputType="number"
                android:maxLength="30"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/colorTextDark"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvBrowsePlan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_medium"
                android:gravity="right|center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:text="View Offer"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btnPreview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/button_solid_blue"
                android:fontFamily="@font/roboto"
                android:text="Preview"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>

    </RelativeLayout>
         
<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        tools:context=".ui.allfragment.DTHRechargeFragment" android:tag="layout/fragment_d_t_h_recharge_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvErrorMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorRed"
                android:textSize="@dimen/_10sdp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/edtDTHNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/edit_text_outline"
                android:fontFamily="@font/roboto_light"
                android:gravity="left|center"
                android:hint="@string/enter_dth_number"
                android:inputType="number"
                android:maxLength="20"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/colorTextDark"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:id="@+id/rLayoutOperator"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_outline"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivOperatorImg"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="@dimen/_10sdp"
                    android:src="@drawable/user"
                    app:civ_border_color="@color/colorBorder"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/tvOperator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/ivDownArrow"
                    android:layout_toRightOf="@+id/ivOperatorImg"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="left|center"
                    android:paddingLeft="@dimen/_5sdp"
                    android:text="Please select operator"
                    android:textColor="@color/colorTextLight"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/ivDownArrow"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_arrow_down" />

            </RelativeLayout>

            <EditText
                android:id="@+id/edtAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edit_text_outline"
                android:fontFamily="@font/roboto_light"
                android:gravity="left|center"
                android:hint="Enter recharge amount"
                android:inputType="number"
                android:maxLength="30"
                android:paddingLeft="@dimen/_10sdp"
                android:textColor="@color/colorTextDark"
                android:textColorHint="@color/colorTextLight"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/button_solid_blue"
                android:fontFamily="@font/roboto"
                android:text="Preview"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </RelativeLayout>
         

<?xml version="1.0" encoding="utf-8"?>

                                                   

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.allfragment.DMRPanelRegisterFragment" android:tag="layout/fragment_d_m_r_panel_register_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:background="@color/colorLightGrayBg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_online_banking" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvErrorMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/_10sdp"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/edit_text_outline"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="left|center"
                        android:hint="@string/enter_name"
                        android:inputType="text"
                        android:maxLength="50"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/colorTextDark"
                        android:textColorHint="@color/colorTextLight"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edtSurName"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edit_text_outline"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="left|center"
                        android:hint="@string/enter_surname"
                        android:inputType="text"
                        android:maxLength="50"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/colorTextDark"
                        android:textColorHint="@color/colorTextLight"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edtPinCode"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edit_text_outline"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="left|center"
                        android:hint="@string/enter_pincode"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/colorTextDark"
                        android:textColorHint="@color/colorTextLight"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edtAddress1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edit_text_outline"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="left|center"
                        android:hint="@string/enter_address_1"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/colorTextDark"
                        android:textColorHint="@color/colorTextLight"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edtAddress2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edit_text_outline"
                        android:fontFamily="@font/roboto_light"
                        android:gravity="left|center"
                        android:hint="@string/enter_address_2"
                        android:inputType="text"
                        android:maxLength="60"
                        android:paddingLeft="@dimen/_10sdp"
                        android:textColor="@color/colorTextDark"
                        android:textColorHint="@color/colorTextLight"
                        android:textSize="@dimen/_12sdp" />

                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/button_solid_blue"
                        android:fontFamily="@font/roboto"
                        android:text="@string/register"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
         
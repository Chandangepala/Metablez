        android:icon="@mipmap/app_icon_retailer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_retailer_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Metablez">
        <activity android:name=".activities.OrderListActivity"></activity>
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.SetupShopActivity" />
        <activity android:name=".activities.RegisterUserActivity" />
        <activity android:name=".activities.LanguageSelectActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
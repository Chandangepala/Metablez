<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/product_img"
        android:padding="@dimen/_10sdp"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:src="@drawable/farm_chicken_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_15sdp"
        android:orientation="vertical"
        android:layout_weight=".4">


        <TextView
            android:id="@+id/order_id_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Order Id: mtblz0047123"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/product_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Chiken Curry Cut"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/dateTime_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="Ordered on 18 Aug 2021, 5:20 PM"
            android:textColor="@color/liteGray"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_weight=".1"
        android:src="@drawable/ic_baseline_arrow_forward"/>
</LinearLayout>
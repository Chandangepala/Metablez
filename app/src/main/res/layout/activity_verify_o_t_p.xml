<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    tools:context=".activities.VerifyOTPActivity">

    <TextView
        android:id="@+id/forgot_pass_otp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_60sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:fontFamily="@font/aver"
        android:text="@string/verify_otp"
        android:textSize="@dimen/_16sdp"
        android:textColor="@color/black"/>

    <View
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_3sdp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/red"
        />

    <com.mukesh.OtpView
        android:id="@+id/edt_otp"
        android:layout_width="@dimen/_255sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_40sdp"
        android:padding="@dimen/_7sdp"
        android:hint="Enter OTP"
        android:inputType="number"
        app:OtpItemCount="6"
        app:OtpLineColor="@color/red"
        app:OtpViewType="line"
        android:textColorHint="@android:color/darker_gray"
        android:shadowColor="@color/blue"
        android:background="@drawable/shape_round_corner_rectangle"/>

    <Button
        android:id="@+id/btn_verify_otp"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="Verify"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        android:background="@drawable/button_shape"/>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="horizontal" android:layout_width="match_parent"
android:layout_height="wrap_content"
android:gravity="center_vertical">

<ImageView
    android:id="@+id/product_img"
    android:layout_width="@dimen/_70sdp"
    android:layout_height="@dimen/_70sdp"
    android:src="@drawable/farm_chicken_img"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/product_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="Chiken Curry Cut"
        android:textSize="@dimen/_12sdp" />


    <TextView
        android:id="@+id/product_weight_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="500gms"
        android:textColor="@color/liteGray"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/product_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingTop="@dimen/_3sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="RS 250"
        android:textColor="@color/red"
        android:textSize="@dimen/_14sdp" />

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linlay_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_15sdp"
            android:orientation="horizontal"
            android:background="@drawable/button_backgroud"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp">
            <TextView
                android:id="@+id/minus_sign_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"/>

            <TextView
                android:id="@+id/add_button_center_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:text="0.5kg"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"/>

            <TextView
                android:id="@+id/plus_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"/>
        </LinearLayout>

    </RelativeLayout>



</LinearLayout>